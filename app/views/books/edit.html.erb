<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
  <%= form_with model: @book, url: book_path, method: :patch  do |f| %>
    <div class="field">
      <div class="field_with_errors">
        <%= f.label :title, class: "label" %>
      </div>
      <div class="field_with_errors">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="field">
      <div class="field_with_errors">
        <%= f.label :body, class: "label"%>
      </div>
      <div class="field_with_errors">
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="actions">
        <%= f.submit 'Create Book' %>
    </div>
  <% end %>
<% else %>
  <%= form_with model: @book, url: book_path, method: :patch  do |f| %>
    <div class="field">
      <%= f.label :title, class: "label" %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :body, class: "label"%>
      <%= f.text_area :body %>
    </div>    
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
<% end %>
