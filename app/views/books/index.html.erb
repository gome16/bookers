<div class="books_create">
<% @books.each do |book| %>
  <%= book.body %>
  <%= book.title %>
  <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<%= form_with model: @book, url:books_path, method: :post  do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>
</div>
